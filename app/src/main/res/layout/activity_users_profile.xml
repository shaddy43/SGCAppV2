<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UsersProfileActivity"
    android:background="@drawable/profile_activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/red_john"
        android:id="@+id/visit_profile_image"
        />

    <TextView
        android:id="@+id/visit_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignTop="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="184dp"
        android:layout_marginRight="15dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visit_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="15dp"
        android:text="Hey there I am using SGCApp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/visit_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_profile_status"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="95dp"
        android:background="@color/colorPrimaryLight"
        android:text="Send Request"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/visit_profile_btn_decline"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/visit_profile_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="46dp"
        android:background="@color/colorPrimaryLight"
        android:text="Cancel Request"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>