<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.GroupMemberSelection">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Group Members"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/select_group_text"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@id/select_group_text"
        android:id="@+id/group_member_selection_swipe_refresher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/member_selection_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>