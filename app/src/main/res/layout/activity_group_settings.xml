<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.GroupSettings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:id="@+id/group_settings_image"
            />

        <EditText
            android:id="@+id/group_settings_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/group_settings_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Name"
            />

        <Button
            android:id="@+id/group_settings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Group"

            />

        <ListView
            android:id="@+id/group_settings_members_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</RelativeLayout>