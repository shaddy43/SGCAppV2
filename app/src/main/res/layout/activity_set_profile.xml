<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_profile_activity"
    tools:context=".UI.SetProfile">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="changeImage"
        android:src="@drawable/red_john" />

    <EditText
        android:id="@+id/name_setProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="265dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/status_setProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="305dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Status"
        android:textSize="20sp" />

    <Button
        android:id="@+id/editProfile_setProfile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="65dp"
        android:textColor="@color/light"
        android:layout_below="@id/status_setProfile"
        android:layout_marginTop="100dp"
        android:layout_marginRight="66dp"
        android:background="@color/button"
        android:onClick="editProfile"
        android:text="Edit profile" />

    <Button
        android:id="@+id/submit_setProfile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/status_setProfile"
        android:layout_marginTop="100dp"
        android:textColor="@color/light"
        android:layout_marginRight="66dp"
        android:background="@color/button"
        android:onClick="submit"
        android:visibility="invisible"
        android:text="Submit" />

    <TextView
        android:id="@+id/email_setProfile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/status_setProfile"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="65dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Phone Number"
        android:textSize="16sp" />

</RelativeLayout>