<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp"
    tools:context=".Chat">

    <include
        layout="@layout/custom_chat_bar"
        android:id="@+id/chat_activity_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_activity_toolbar"
        android:id="@+id/private_chat_messages_list"
        android:layout_above="@id/private_chat_linear_layout"
        >


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/private_chat_linear_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/private_chat_send_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/private_chat_linear_layout"
            android:src="@drawable/ic_photo_camera_black"
            android:paddingBottom="15dp"
            />

        <EditText
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:id="@+id/private_chat_input_messages"
            android:hint="Type message here ..."
            android:padding="15dp"
            />
        
        <ImageButton
            android:id="@+id/private_chat_send_message_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:src="@drawable/ic_send_black"
            />

    </LinearLayout>

</RelativeLayout>